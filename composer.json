{
    "name": "pachico/tier",
    "type": "library",
    "description": "Helper class for application tiers definitions",
    "keywords": [
        "pachico",
        "tier",
        "environment"
    ],
    "homepage": "https://github.com/pachico/tier",
    "license": "MIT",
    "authors": [
        {
            "name": "pachico/tier",
            "email": "pachicodev@gmail.com",
            "homepage": "https://github.com/pachico",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.4|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.8||~5.0",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Pachico\\Tier\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pachico\\Tier\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "sniff": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
